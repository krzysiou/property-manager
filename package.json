{
  "name": "property-manager",
  "version": "1.0.0",
  "type": "module",
  "author": "krzysiou",
  "license": "ISC",
  "description": "A property manager written using Apollo Server and GraphQL.",
  "main": "index.js",
  "keywords": [],
  "scripts": {
    "dev": "node --env-file=.env --import=tsx --watch ./src/index.ts",
    "codegen": "graphql-codegen --config codegen.ts",
    "test": "vitest",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "start": "node --env-file=.env ./dist/index.js",
    "db:dev-test": "npx prisma studio --schema=prisma/dev-test/schema.prisma",
    "db:dev": "npx prisma studio --schema=prisma/dev/schema.prisma",
    "db:migrate:dev": "npx prisma migrate dev --schema=prisma/dev/schema.prisma",
    "db:migrate:dev-test": "npx prisma migrate dev --schema=prisma/dev-test/schema.prisma",
    "db:generate": "prisma generate --schema prisma/dev/schema.prisma && prisma generate --schema prisma/dev-test/schema.prisma",
    "clean": "rm -rf dist",
    "clean:codegen": "find src -type f -name \"types.codegen.ts\" -exec rm -f {} \\;",
    "lint": "npx eslint --cache",
    "lint:fix": "npx eslint --fix",
    "typecheck": "tsc --noEmit -p tsconfig.build.json",
    "prepare": "husky"
  },
  "dependencies": {
    "@apollo/server": "^4.11.3",
    "@graphql-codegen/cli": "^5.0.3",
    "@prisma/client": "^6.2.1",
    "axios": "^1.7.9",
    "graphql": "^16.10.0",
    "joi": "^17.13.3",
    "uuidv4": "^6.2.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@graphql-codegen/graphql-modules-preset": "^4.0.12",
    "@graphql-codegen/typescript": "^4.1.2",
    "@graphql-codegen/typescript-resolvers": "^4.4.1",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-check-file": "^2.8.0",
    "eslint-plugin-file-extension-in-import-ts": "^2.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "graphql-modules": "^2.4.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.4.2",
    "prisma": "^6.2.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.3"
  }
}
