{
  "name": "property-manager",
  "version": "1.0.0",
  "type": "module",
  "author": "krzysiou",
  "license": "ISC",
  "description": "A property manager written using Apollo Server and GraphQL.",
  "main": "index.js",
  "keywords": [],
  "scripts": {
    "build": "tsc",
    "dev": "node --env-file=.env --import=tsx --watch ./src/index.ts",
    "start": "tsc && node --env-file=.env ./dist/index.js",
    "clean": "rm -rf dist",
    "lint": "npx eslint --cache",
    "lint:fix": "npx eslint --fix",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "dependencies": {
    "@apollo/server": "^4.11.3",
    "graphql": "^16.10.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-check-file": "^2.8.0",
    "eslint-plugin-file-extension-in-import-ts": "^2.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
